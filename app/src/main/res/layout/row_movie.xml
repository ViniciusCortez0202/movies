<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE8B9"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/postMovieRow"
        android:layout_width="122dp"
        android:layout_height="183dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameMovieRow"
        android:layout_width="216dp"
        android:layout_height="73dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/postMovieRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genresRow"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/postMovieRow"
        app:layout_constraintTop_toBottomOf="@+id/nameMovieRow" />

    <TextView
        android:id="@+id/dateReleaseRow"
        android:layout_width="107dp"
        android:layout_height="25dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#5C5C5C"
        app:layout_constraintStart_toEndOf="@+id/postMovieRow"
        app:layout_constraintTop_toBottomOf="@+id/nameMovieRow" />

</androidx.constraintlayout.widget.ConstraintLayout>